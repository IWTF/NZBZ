.talk_cell{
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.avatar, .avatar image{
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  box-shadow: rgba(71, 78, 88, 0.0195) 1px 1px, rgba(75, 82, 92, 0.019) 2px 2px, rgba(80, 86, 96, 0.0185) 3px 3px, rgba(84, 90, 100, 0.018) 4px 4px, rgba(88, 94, 103, 0.0175) 5px 5px, rgba(92, 98, 107, 0.017) 6px 6px, rgba(96, 102, 111, 0.0165) 7px 7px;
}

.talk_cell_r{
  flex-grow: 1;
}

.tcell_header{
  display: flex;
  flex-direction: row;
  padding-bottom: 5rpx;
  border-bottom: 3rpx solid #dddee1;
}

.talker_name{
  position: relative;
  color: #61b0ff;
}

.talker_name::after{
  content: "";
  width: 100%;
  height: 0;
  position: absolute;
  left: 0;
  bottom: -6rpx;
  border: 3rpx solid #61b0ff;
}

.talk_time{
  text-align: right;
  flex-grow: 1;
  color: #cacbcc;
}

.discuss{
  padding: 5rpx 0 20rpx 0;
}

.detail>view{
  box-shadow: 0 0 16rpx 2rpx rgba(26, 26, 26, 0.05);
}