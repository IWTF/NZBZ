page{
  width: 100%;
  color: #495060;
  font-size: 16px;
  background-color: #f8f8f9;
}

.timezone{
  position: absolute;
  top: 420rpx;
  right: 40rpx;
  width: 15rpx;
  border-radius: 20rpx;
  background-color: #eee;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 1;
}

.timedot{
  width: 40rpx;
  height: 40rpx;
  background-color: #add8e6;
  border: 6rpx solid #eee;
  border-radius: 50%;
  margin: 20rpx 0;
}

.cur_dot{
  box-shadow: 0 0 10px 2px#f7f7cf;
  background-color: #f7f7cf;
}

.cur_dot::after{
  content: 'fasdfadsfa';
  position: absolute;
  top: 0;
  right: 40rpx;
  padding: 10rpx 20rpx;
  background: #eee;
  border-radius: 30rpx;
  animation: lighten 2s linear;
  opacity: 0;
}

@keyframes lighten{
  0% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}

/************* 装饰卡片 style *****************/
.tab_con{
  margin: 50rpx 30rpx;
  padding: 10rpx 20rpx;
  border-radius: 15rpx;
  box-shadow: 0 0 8px 1px rgba(26, 26, 26, 0.1);  
}

.tab_con>view, .tag_con>view{
  display: inline-block;
  vertical-align: top;
  margin-right: 20rpx;
}

.book_img, .book_img image{
  width: 160rpx;
  height: 200rpx;
  box-shadow: 0 0 8px 1px rgba(26, 26, 26, 0.1);  
}

.tag_title{
  font-weight: bold;
  color: #495060;
}

.book_disc{
  margin-left: 20rpx;
}

.book_title{
  color: #000;
  font-size: 18px;
  font-weight: bold;
  margin: 10rpx 0 30rpx;
}

.tag_con{
  margin: 80rpx 37rpx 15rpx;
  padding: 0 15rpx;
  border-left: 6rpx solid #00ff88;
}

.tag_img, .tag_img image{
  width: 40rpx;
  height: 40rpx;
}

/*************  时间卡片 style  ***************/
.swiper{
  width: 100%;
  height: 900rpx;
  position: relative;
}

.map_con>view{
  margin: 10rpx 100rpx 80rpx 40rpx;
  background-color: #fff;
}

.map_img, .map_img image{
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  width: 100%;
  height: 300rpx;
}

/***** 卡片描述 style *****/
.map_disc{
  position: relative;
  padding: 40rpx 25rpx 30rpx;
  background-color: #fff;
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
}

.share_btn{
  position: absolute;
  right: 50rpx;
  top: 0;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  padding: 20rpx;
  line-height: 125rpx;
  transform: translateY(-50%);
  background-color: #d1e7da;
}

.share_btn image{
  width: 70rpx;
  height: 70rpx;
}

.card_name{
  color: #1c2438;
  font-size: 18px;
  font-weight: bold;
  padding-bottom: 20rpx;
}
