page{
  width: 100%;
  background-color: #f8f8f9;
}

.tem_card{
  width: 540rpx;
  height: 960rpx;
  background-color: #fff;
  margin: auto;
  margin-top: 30rpx;
  padding: 30rpx;
  box-shadow: 0 0 10px 3px #f2f2f2;
}

.hoster_head, .hoster_head image{
  width: 540rpx;
  height: 530rpx;
}

.hoster_content{
  padding: 40rpx 0;
}

.content{
  width: 540rpx;
  height: 180rpx;
}

.title{
  direction: rtl;
  font-size: 17px;
  color: #969696;
}

.footer{
  position: fixed;
  bottom: -2rpx;
  left: 0;
  display: flex;
  flex-direction: row;
  width: 100%;
}

.footer button{
  flex: 1;
  border-radius: 0;
  background-color: #adeccf;
  color: #495060;
  font-size: 14px;
  padding: 20rpx 0;
}

.footer button::after{
  border: none;
}

.footer button image{
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}
