/* pages/editProfile/editProfile.wxss */
@import "../../skins/light.wxss";

page {
  background-color: whitesmoke;
  font-size: 32rpx;
  height: 100%;
}

.editProfile {
  padding-top: 24rpx;
}

.info-group {
  margin: 24rpx 0;
  box-shadow: 0 0 16rpx 2 rpx rgba(26, 26, 26, 0.05);
  padding: 6rpx 24rpx;
  background-color: white;
}

.info-group:first-child {
  margin: 0 0 24rpx 0;
}

.info-item {
  padding: 24rpx 12rpx;
  border-bottom: 1px solid #f5f5f5;
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: start;
}

.dark-box .info-item {
  border-bottom: 1px solid #222;
}

.info-item text:nth-child(1) {
  width: 192rpx;
  text-align: left;
}

.info-item text:nth-child(2) {
  color: #81848b;
}

.info-group>.info-item:last-child {
  border: none;
}

.with-arrow::after {
  font-family: "iconfont" !important;
  content: '\e6ab';
  position: absolute;
  right: 24rpx;
  height: 32rpx;
  width: 32rpx;
  top: calc(50%-16rpx);
  bottom: calc(50%-16rpx);
}

.saveBtn {
  margin: 24rpx 32rpx;
}

.dark-box .saveBtn {
  background-color: #33373b !important;
  color: #81848b !important;
}
